
<div class="container mt-5 d-flex justify-content-center">

  <div class="card p-3">

    <div class="d-flex align-items-center">

      <div class="image">
        <%=image_tag(current_user.Avatar,width: 90, height: 140) if current_user && current_user.Avatar.present? %><br/>
      </div>

      <div class="ml-3 w-100">

        <h5 class="mb-0 mt-0"><%= current_user.email %></h5>
        <span><%=current_user.First_name %><%="  " %><%=current_user.Last_name %></span>

        <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">

          <div class="d-flex flex-column">
            <span class="articles">User id</span>
            <span class="number1"><%= current_user.id %></span>

          </div>

          <div class="d-flex flex-column">
            <span class="articles">Movie count</span>
            <span class="number1"><%= current_user.movies.count %></span>

          </div>



        </div>

      </div>


    </div>

  </div>

</div>


